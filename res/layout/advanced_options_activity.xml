<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<ScrollView
    	android:layout_width="match_parent"
    	android:layout_height="match_parent" >
		<TableLayout
    		android:id="@+id/advancedSettingsLayout"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:paddingBottom="@dimen/dialog_bottom_margin"
    		android:paddingLeft="@dimen/dialog_horizontal_margin"
    		android:paddingRight="@dimen/dialog_horizontal_margin"
    		android:paddingTop="@dimen/dialog_top_margin"
    		android:stretchColumns="1"
    		tools:context=".AdvancedOptionsActivity" >
		</TableLayout>
	</ScrollView>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:gravity="right"
	    android:padding="@dimen/dialog_button_padding"
	    tools:ignore="RtlHardcoded" >
		<Button
	    	android:id="@+id/okbutton"
	    	style="?android:attr/buttonBarButtonStyle"
	    	android:layout_width="wrap_content"
	    	android:layout_height="match_parent"
	    	android:paddingLeft="@dimen/dialog_button_extra_width"
	    	android:paddingRight="@dimen/dialog_button_extra_width"
	    	android:layout_gravity="right"
	    	android:text="@string/button_ok"
	    	tools:ignore="RtlHardcoded" />
	</LinearLayout>
</LinearLayout>
